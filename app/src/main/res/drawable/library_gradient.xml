<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!--
    Background gradient for song select screen. The only part that shows through is
    in each song item's bottom margin, so it creates a vertical fading line effect.
    -->
    <gradient
        android:startColor="@color/bg_dark"
        android:endColor="@color/light_blue"
        android:gradientRadius="1000"
        android:type="linear"
        android:angle="90">
    </gradient>

</shape>