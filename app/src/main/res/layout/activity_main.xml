<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:background="@drawable/background_gradient">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivUserIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/user_icon_alt"
            android:src="@drawable/user_icon"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/btnChangeUser"
            app:layout_constraintBottom_toBottomOf="@id/btnChangeUser" />
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@id/ivUserIcon"
            app:layout_constraintTop_toTopOf="@id/btnChangeUser"
            app:layout_constraintBottom_toBottomOf="@id/btnChangeUser" />
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/username_hint"
            android:textColorHint="#666"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="1dp"
            app:layout_constraintLeft_toRightOf="@id/ivUserIcon"
            app:layout_constraintTop_toTopOf="@id/btnChangeUser"
            app:layout_constraintBottom_toBottomOf="@id/btnChangeUser"
            android:visibility="invisible" />
        <Button
            android:id="@+id/btnChangeUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:backgroundTint="@color/light_blue"
            android:textColor="@color/white"
            android:text="@string/change_user"
            android:textSize="14sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/userInfoBarrier"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="btnChangeUser, ivUserIcon, tvUsername, etUsername" />
        <ImageView
            android:id="@+id/ivAlbumCover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            android:src="@drawable/muse_cover"
            android:contentDescription="@string/album_cover_alt"
            android:background="#0000ff"
            android:scaleType="centerCrop"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/userInfoBarrier"
             />
        <TextView
            android:id="@+id/tvSongName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivAlbumCover"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:text="@string/song_name" />
        <TextView
            android:id="@+id/tvArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvSongName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="20sp"
            android:text="@string/artist_name"
            android:textColor="@color/light_blue"
            android:maxLines="1"
            android:ellipsize="end" />
        <TextView
            android:id="@+id/tvPlayCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvArtist"
            android:textColor="@color/pale_blue"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/play_count_default" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/llMediaControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlayCount"
            app:layout_constraintHorizontal_chainStyle="packed">
            <Button
                android:id="@+id/btnPrev"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btnPlay"
                android:background="@drawable/prev_icon" />
            <Button
                android:id="@+id/btnPlay"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btnNext"
                app:layout_constraintLeft_toRightOf="@id/btnPrev"
                android:background="@drawable/play_icon" />
            <Button
                android:id="@+id/btnNext"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btnPlay"
                android:background="@drawable/next_icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>