<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.NowPlayingFragment"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/player_gradient">
    <!--    android:background="@drawable/player_gradient"-->
    <ImageView
        android:id="@+id/ivAlbumCover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        tools:src="@drawable/muse_cover"
        android:contentDescription="@string/album_art_alt"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tvSongName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/ivAlbumCover"
        app:layout_constraintLeft_toRightOf="@id/ivAlbumCover"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        android:textColor="@color/white"
        tools:text="@string/song_name" />
    <TextView
        android:id="@+id/tvArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvSongName"
        app:layout_constraintLeft_toRightOf="@id/ivAlbumCover"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        tools:text="@string/artist_name"
        android:textColor="@color/light_blue"
        android:maxLines="1"
        android:ellipsize="end" />
    <TextView
        android:id="@+id/tvPlayCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/ivAlbumCover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvArtist"
        android:textColor="@color/pale_blue"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="@string/play_count_default" />
    <Button
        android:id="@+id/btnPrev"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/prev_icon"
        app:layout_constraintBottom_toBottomOf="@id/btnPlay"
        app:layout_constraintTop_toTopOf="@id/btnPlay"
        app:layout_constraintLeft_toRightOf="@id/ivAlbumCover"
        app:layout_constraintRight_toLeftOf="@id/btnPlay" />
    <Button
        android:id="@+id/btnPlay"
        android:layout_width="100dp"
        android:layout_marginTop="10dp"
        android:layout_height="100dp"
        android:background="@drawable/play_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnPrev"
        app:layout_constraintRight_toLeftOf="@id/btnNext"
        app:layout_constraintTop_toBottomOf="@id/tvPlayCount" />
    <Button
        android:id="@+id/btnNext"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/next_icon"
        app:layout_constraintBottom_toBottomOf="@id/btnPlay"
        app:layout_constraintTop_toTopOf="@id/btnPlay"
        app:layout_constraintLeft_toRightOf="@id/btnPlay"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>